var table = $("#file-datatable").DataTable();
    function applyDateFilter() {

            var statusType = $("#statustype").val();
            var userType = $("#usertype").val();

            table.rows().every(function (rowIdx, tableLoop, rowLoop) {
                var data = this.data();
                console.log(data);
                var DatastatusType = data[3];
                var DatauserType = data[4];

                if ((statusType !== "" && DatastatusType !== statusType) ||
                    (userType !== "" && DatauserType !== userType)) 
                    {
                    $(this.node()).hide();
                } else {
                    $(this.node()).show();
                }
            });
        }

        table.on('draw', function () {
            console.log("DataTable Draw Callback");
            applyDateFilter();
        });

        $('#filterForm').submit(function (e) {
            e.preventDefault();
            console.log("Form Submitted");
            $('#testModalCenter2').modal('hide');
            applyDateFilter();
        });

        $('.filtering').click(function () {
            console.log("Filter Modal Function");
            $("#testModalCenter2").modal('show');
        });

        $('#clearButton').click(function () {
            $('#filterForm').find(':input').val('');
            applyDateFilter();
        });
        $('#searchright').on('keyup', function () {
                table.search(this.value).draw();
        });


    
  });

